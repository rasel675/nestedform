<%= form_with(model: user, local: true) do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :phone %>
    <%= form.text_field :phone %>
  </div>

  <!-- Nested attributes for addresses -->
  <%= form.fields_for :addresses do |address_fields| %>
    <div class="field">
      <%= address_fields.label :address %>
      <%= address_fields.text_field :address %>
    </div>

    <div class="field">
      <%= address_fields.label :district %>
      <%= address_fields.text_field :district %>
    </div>

    <div class="field">
      <%= address_fields.label :country %>
      <%= address_fields.text_field :country %>
    </div>

    <!-- Add a field to allow deleting addresses -->
    <%= address_fields.check_box :_destroy %>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
